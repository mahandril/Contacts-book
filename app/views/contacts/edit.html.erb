<h1>Editing contact</h1>
 
<%= form_for :contact, url: contact_path(@contact), method: :patch do |f| %>
<!--checking for error in the form if any error will display the error message -->
  <% if @contact.errors.any? %>
  
  <div id="error_explanation">
    <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
    <ul>
    <% @contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    
  </div>
  
  <% end %>
  
  <p>
    <%= f.label :First_Name%><br>
    <%= f.text_field :FirstName%>
  </p>
 
  <p>
    <%= f.label :Last_Name %><br>
    <%= f.text_field :LastName %>
  </p>
  
  <p>
    <%= f.label :Email_Id %><br>
    <%= f.text_field :EmailId %>
  </p>
  
  <p>
    <%= f.label :Mobile_Number %><br>
    <%= f.text_field :MobileNumber %>
  </p>
  
  <p>
    <%= f.label :Address %><br>
    <%= f.text_area :Address %>
  </p>
  
  <p>
    <%= f.label :Image %><br>
    <%= f.file_field :Image %>
  </p>

  <p><br>
    <%= f.submit %>
  </p>

<% end %>
 
<%= link_to 'List Contact', contacts_path %>
